QPushButton {
    background-color: #009688;
    color: white;
    font-size: 14px;
    padding: 8px 16px;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #00796b;
}


GestureControlUI QLabel#statusLabel {
    font-weight: bold;
    font-size: 14px;
    color: #2e7d32;
}

GestureControlUI QLabel#gestureLabel {
    font-weight: bold;
    font-size: 14px;
}
