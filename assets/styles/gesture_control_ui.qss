GestureControlUI QCheckBox {
    spacing: 5px;
    color: #616161;
}

GestureControlUI QCheckBox::indicator {
    width: 20px;
    height: 20px;
}

GestureControlUI QCheckBox::indicator:unchecked {
    border: 2px solid #9e9e9e;
    background-color: #fafafa;
}

GestureControlUI QCheckBox::indicator:checked {
    border: 2px solid #9e9e9e;
    background-color: #64b5f6;
}

GestureControlUI QCheckBox::indicator:unchecked:hover {
    border-color: #64b5f6;
}

GestureControlUI QCheckBox::indicator:checked:hover {
    background-color: #2196f3;
    border-color: #2196f3;
}
GestureControlUI QPushButton#startButton {
    background-color: #2e7d32;
    color: white;
}

GestureControlUI QPushButton#stopButton {
    background-color: #2b4b76;
    color: white;
}